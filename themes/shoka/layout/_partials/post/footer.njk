<div class="meta">
  {%- if date(post.date) != date(post.updated) or time(post.date) != time(post.updated) %}
  <span class="item">
    <span class="icon">
      <i class="ic i-calendar-check"></i>
    </span>
    <span class="text">{{ __('post.edited') }}</span>
    <time title="{{ __('post.modified') + __('symbol.colon') + full_date(post.updated) }}" itemprop="dateModified" datetime="{{ moment(post.updated).format() }}">{{ date(post.updated) }}</time>
  </span>
  {%- endif %}

  {# Giscus 评论嵌入 #}
  {%- if theme.giscus.enable and theme.giscus.repo and theme.giscus.repoId and theme.giscus.categoryId %}
  <div id="giscus_container" class="post-comments">
    <script src="https://giscus.app/client.js"
      data-repo="{{ theme.giscus.repo }}"
      data-repo-id="{{ theme.giscus.repoId }}"
      data-category-id="{{ theme.giscus.categoryId }}"
      data-mapping="{{ theme.giscus.mapping or 'pathname' }}"
      data-strict="{{ theme.giscus.strict or '0' }}"
      data-reactions-enabled="{{ theme.giscus.reactionsEnabled or '1' }}"
      data-emit-metadata="{{ theme.giscus.emitMetadata or '0' }}"
      data-input-position="{{ theme.giscus.inputPosition or 'bottom' }}"
      data-theme="{{ theme.giscus.theme or 'light' }}"
      data-lang="{{ theme.giscus.lang or 'zh-CN' }}"
      data-loading="lazy"
      crossorigin="anonymous"
      async>
    </script>
  </div>
  {%- endif %}
</div>
